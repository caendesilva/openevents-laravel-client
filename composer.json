{
    "name": "openevents/laravelclient",
    "description": "Laravel Client for sending Events to the OpenEvents API",
    "keywords": [
        "openevents",
        "laravelclient"
    ],
    "homepage": "https://github.com/openevents/laravelclient",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Caen De Silva",
            "email": "caen@desilva.se",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "OpenEvents\\LaravelClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEvents\\LaravelClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "OpenEvents\\LaravelClient\\LaravelClientServiceProvider"
            ],
            "aliases": {
                "LaravelClient": "OpenEvents\\LaravelClient\\LaravelClientFacade"
            }
        }
    }
}
