{
    "name": "openevents/laravel",
    "description": "Laravel Client for sending Events to the OpenEvents API",
    "keywords": [
        "openevents",
        "laravel"
    ],
    "homepage": "https://github.com/caendesilva/openevents-laravelclient",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Caen De Silva",
            "email": "caen@desilva.se",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "OpenEvents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEvents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "OpenEvents\\OpenEventsServiceProvider"
            ],
            "aliases": {
                "OpenEvents": "OpenEvents\\OpenEventsFacade"
            }
        }
    }
}
